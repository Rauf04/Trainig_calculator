<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:ellipsize="start"
        android:paddingEnd="10dp"
        android:gravity="end"
        android:textColor="@android:color/black"
        android:textSize="40sp"
        android:singleLine="true"
        />

    <TextView
        android:id="@+id/result_text"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:singleLine="true"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">
            
            <Button
                style="@style/ActionButton"
                android:id="@+id/btn_ac"
                android:text="AC"
                />

            <Button
                style="@style/ActionButton"
                android:id="@+id/btn_openbrack"
                android:text="("
                />

            <Button
                style="@style/ActionButton"
                android:id="@+id/btn_closebrack"
                android:text=")"
                />

            <Button
                style="@style/ActionButton"
                android:id="@+id/btn_divis"
                android:text="/"
                />


        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_9"
            android:text="9"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_8"
            android:text="8"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_7"
            android:text="7"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_mlt"
            android:text="*"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_4"
            android:text="4"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_5"
            android:text="5"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_6"
            android:text="6"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_plus"
            android:text="+"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_1"
            android:text="1"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_2"
            android:text="2"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_3"
            android:text="3"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_minus"
            android:text="-"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_dot"
            android:text="."
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_0"
            android:text="0"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_back"
            android:text="BACK"
            />

        <Button
            style="@style/ActionButton"
            android:id="@+id/btn_equal"
            android:text="="
            />


    </LinearLayout>


    </LinearLayout>

</LinearLayout>
